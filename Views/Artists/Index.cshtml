@model List<Spin.Models.Artist>
@{
    ViewBag.Title = "Artists";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Artist</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Model)
            {
                <tr>
                    <td><img src="@artist.ArtistImageURL" class="img-responsive img-rounded" /></td>
                    <td><a href="@Url.RouteUrl("ArtistDetails", new { id = artist.Id })" class="btn">@artist.Name</a></td>
                    <td>
                        @foreach (var genre in artist.Albums.SelectMany(a => a.AlbumGenre.Select(g => g.Genre)))
                        {
                            <span>@genre.Name</span>
                        }
                    </td>
                    <td><a href="@Url.RouteUrl("ArtistDelete", new { id = artist.Id })" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <a href="@Url.RouteUrl("CreateArtist")" class="btn btn-success">Add another artist</a>
        </tfoot>
    </table>
</div>